<Preload>

	<!-- always preloaded (level and main menu) -->
	<Common>
	</Common>
		
	<!-- only preloaded when enter the main menu -->
	<NoLevel>
		<Preload file="levels/Forest/LoadingForest.dds"/> <!-- preload images for loadingscreen otherwise they won't show up! -->
	</NoLevel>
	
	<!-- level specific -->
	<Levels>
	
		<!-- only preloaded when loading a level -->
		<Common>
			<Preload file="Libs/UI/weapon_*"/>
			<Preload file="Libs/UI/hand*"/>
		</Common>
		
		<!-- per level -->
		<Forest>
			<Preload file="levels/Forest/Forest.dds"/>
			<Preload file="levels/Forest/LoadingForest.dds"/>
		</Forest>
		
	</Levels>
	
</Preload>